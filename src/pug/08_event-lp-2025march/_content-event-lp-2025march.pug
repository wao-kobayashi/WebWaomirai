        .lp-25mar-events-sub   
           - 
            // 科目とそのレベルを定義する配列
            // 各科目オブジェクトは title（科目名）と levels（レベルID配列）を持つ
            const leftsubjects = [
                { title: "哲学（思考力）", levels: ["philosophy-l1", "philosophy-l2", "philosophy-l3", "philosophy-l4"] },
                { title: "科学リテラシー", levels: ["science-l1", "science-l2","science-l3", "science-l4"] },
