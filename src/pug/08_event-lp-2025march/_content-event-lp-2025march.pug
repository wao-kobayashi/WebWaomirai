        .lp-25mar-events-main 
          - 
            //////////////////////////////
            // カテゴリー別表示用の関数定義
            //////////////////////////////
            const renderCategory = (category) => {
              // 2-1. 指定されたカテゴリーのコースだけを抽出
              const catCourses = courses.filter(c => c.category === category)
              
              // 2-2. そのカテゴリーの中から、重複のないレベル一覧を取得
              // - map(c => c.level): 各コースからレベルだけ取り出す → [1, 1, 2, 2] のような配列ができる
              // - new Set(): 重複を除去 → Set{1, 2}
              // - [...Set]: SetをArrayに戻す → [1, 2]
              const levels = [...new Set(catCourses.map(c => c.level))]
              
              // 2-3. レベルごとにコースをグループ化
              return levels.map(level => {
                return { 
                  level,                                              // レベル番号
                  courses: catCourses.filter(c => c.level === level)  // そのレベルのコース一覧
                }
              })
            }
          each category in ["philosophy", "science", "economy"]
            //- 3-2. カテゴリーごとのdiv作成
            div.lp-25mar-events-main-section(id=category)
              //- 3-3. レベルごとのグループをループ
              //- renderCategory関数の戻り値: [
              //-   { level: 1, courses: [コース1, コース2] },
              //-   { level: 2, courses: [コース3, コース4] }
              //- ]
              h2.lp-25mar-events-main-section-title
                if category === 'philosophy'
                  | 哲学（思考力）
                else if category === 'science'
                  | 科学リテラシー
                else if category === 'economy'
                  | 経済（お金）
              each group in renderCategory(category)
                //- 3-4. レベルごとのセクション作成
                //- id例: philosophy-l1, philosophy-l2, science-l1...
                section.lp-25mar-events-main-section-levels(id=`${category}-l${group.level}`)
                  //- 3-5. 各レベル内のコースをループ
                  each course in group.courses
                    .lp-25mar-events-main-section-levels-child
                      //- 3-6. コース情報の表示
                      .lp-25mar-events-main-section-levels-child-title(class=category)= course.title         
                      .lp-25mar-events-main-section-levels-child-img 
                        img(src=course.img)
                      .lp-25mar-events-main-section-levels-child-description= course.description
                      .lp-25mar-events-main-section-levels-child-bottom
                        .lp-25mar-events-main-section-levels-child-subject
                          .lp-25mar-events-main-section-levels-child-subject-category
                              if course.category === 'philosophy'
                                | 哲学
                              else if course.category === 'science'
                                | 科学
                              else if category === 'economy'
                                | 経済
                          .lp-25mar-events-main-section-levels-child-subject-level='LEVEL' + course.level
                            != course.schedule.split('\n').join('<br>') 
              div
