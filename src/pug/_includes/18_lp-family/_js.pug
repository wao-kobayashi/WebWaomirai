script.
  $(document).ready(function() { 
    $('.inview-triger').on('inview', function(event, isInView) {
      if (isInView) {
        $(this).addClass('inview');
      }
    });
    $(window).on("load scroll", function () {
      if ($(this).scrollTop() > 600) {
       $(".fixed-btn a").fadeIn();
      } else {
       $(".fixed-btn a").fadeOut();
      }
    });

    // モーダルウィンドウを開く関数
    // モーダルと背景を表示する
    function modalOpen() {
      $('.modal, .bg-modal').show();
    }

    // LINEブラウザかつURLにform=loycusがある場合にURLを変更する関数
    function updateLineUrls() {
      var isLineBrowser = /Line/i.test(navigator.userAgent);
      var hasLoycusParam = window.location.search.indexOf('from=loycus') !== -1;

      console.log('isLineBrowser:', isLineBrowser);
      console.log('hasLoycusParam:', hasLoycusParam);

      if (isLineBrowser && hasLoycusParam) {
        var newUrl = "#{UrlFormLoycus}";
        $('.js-line-trigger').each(function(index) {
          var $button = $(this);
          var oldHref = $button.attr('href') || '(hrefなし)';
          
          $button.attr('href', newUrl);
          $button.data('href', newUrl);
        });
      } 
    }


    // ボタン動作の更新関数
    // 画面幅に応じてボタンの動作を切り替える
    // PC: モーダルを開く動作
    // スマホ: 通常のリンク動作
    function updateButtonBehavior() {
      var isWideScreen = $(window).width() >= 769;

      $('.js-line-trigger').each(function() {
       
        var $button = $(this);
        
        if (isWideScreen) {
          if ($button.attr('href')) {
            $button.data('href', $button.attr('href')).removeAttr('href');
          }
          $button.off('click').on('click', modalOpen);
        } else {
          if ($button.data('href')) {
            $button.attr('href', $button.data('href')).removeData('href');
          }
          $button.off('click');
        }
      });
    }

    // 画面サイズ変更対応
    // ページ読み込み時とリサイズ時にボタン動作を更新する
    // これによりPC/スマホの表示切替時に適切な動作になる
    $(window).on('load resize', function() {
      //- updateButtonBehavior();
      updateLineUrls();
    });

    
