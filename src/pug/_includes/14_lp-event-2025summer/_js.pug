script.
  /**
  * jQuery Document Ready
  * ドキュメントの読み込みが完了した時点で実行されるメイン処理
  */
  $(document).ready(function() {
    /**
    * モーダルウィンドウを開く関数
    * モーダルと背景を表示する
    */
    function modalOpen() {
      $('.modal, .bg-modal').show();
    }

    /**
    * ボタン動作の更新関数
    * 画面幅に応じてボタンの動作を切り替える
    * PC: モーダルを開く動作
    * スマホ: 通常のリンク動作
    */
    function updateButtonBehavior() {
      // 769px以上をPC表示とみなす
      var isWideScreen = $(window).width() >= 769;

      // 全てのCVボタンに対して処理
      $('.c-btn-cv').each(function() {
        var $button = $(this);
        
        if (isWideScreen) {
          // PC表示の場合
          if ($button.attr('href')) {
            // href属性を一時的にdata属性に退避し、通常のリンク動作を無効化
            $button.data('href', $button.attr('href')).removeAttr('href');
          }
          // クリックイベントを一旦解除し、モーダルを開く処理を割り当て
          $button.off('click').on('click', modalOpen);
        } else {
          // スマホ表示の場合
          if ($button.data('href')) {
            // 保存しておいたURLを元のhref属性に戻し、通常のリンク動作を有効化
            $button.attr('href', $button.data('href')).removeData('href');
          }
          // クリックイベントを解除してデフォルトのリンク動作に戻す
          $button.off('click');
        }
      });
    }

    /**
    * 画面サイズ変更対応
    * ページ読み込み時とリサイズ時にボタン動作を更新する
    * これによりPC/スマホの表示切替時に適切な動作になる
    */
    $(window).on('load resize', updateButtonBehavior);

    
    /**
    * モーダルを閉じる処理
    * 閉じるボタンまたは背景クリック時にモーダルを非表示にする
    */
    $('.modal-close, .bg-modal').click(function() {
      $('.modal-vimeo, .modal, .bg-modal').hide();
    });
    /**
    * モーダルを閉じる処理
    * 閉じるボタンまたは背景クリック時にモーダルを非表示にする
    */
    $('.eng-phase-main-section-green-wrap-faq-box-title').click(function() {
        // クリックされたヘッダーの次のコンテンツを開閉
        $(this).toggleClass('active').next('.eng-phase-main-section-green-wrap-faq-box-content').slideToggle();

        // 他の開いているコンテンツを閉じる
        $('.accordion-header').not(this).removeClass('active').next('.eng-phase-main-section-green-wrap-faq-box-content').slideUp();
    });

    // プログラムのタブの追従 
    let isFixed = false;
    let topPosition = 0;
    let bottomPosition = 0;

    // プログラムのタブの追従 最初の計算の関数
    function recalcPositions() {
      topPosition = $('.p-tab-text').offset().top + $('.p-tab-text').height();
      bottomPosition = $('.p-details .c-btn-cv').offset().top - $(window).height();
    }

    // プログラムのタブの追従 イベント設定の関数
    function checkSticky() {
      const scrollTop = $(window).scrollTop();
      if (!window.matchMedia('(max-width: 768px)').matches) {
          // 769px以上はクラスを全て外して、処理を実行しない
          $('.p-tab-list').removeClass('is-fixed is-fixed-hide');
          return;
      }
      if (scrollTop < topPosition) {
        // 元々のタブの位置より上の場合は、全てのクラスを外す
        $('.p-tab-list').removeClass('is-fixed is-fixed-hide');
      } else if (scrollTop >= topPosition && scrollTop < bottomPosition) {
        // 元々のタブの位置～CVボタンより上の場合は、is-fixedクラスのみを付ける
        $('.p-tab-list').addClass('is-fixed').removeClass('is-fixed-hide');
      } else if (scrollTop >= bottomPosition) {
        // CVボタンより下の場合は、is-fixedクラスとis-fixed-hideクラスを付ける
        $('.p-tab-list').addClass('is-fixed is-fixed-hide');
      }
    }

    // プログラムのタブの追従 読み込み時とリサイズ時は、最初の計算とイベント設定
    $(window).on('load resize', function() {
      recalcPositions();
      checkSticky();
    });

    // プログラムのタブの追従 スクロール時は、計算しないで判定だけ
    $(window).on('scroll', checkSticky);
  
  });