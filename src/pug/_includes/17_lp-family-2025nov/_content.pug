            iconimg: ImgIcnStep05,
            number: '5.',
            title: '開催時間になったら届いたイベントURLから参加しましょう！'
          }]
      each step in steps
        .lp-family-howto-step 
          .lp-family-howto-step-child 
            .lp-family-howto-step-child-icon 
              img(src=step.iconimg)
            .lp-family-howto-step-child-number 
              |#{step.number}
            .lp-family-howto-step-child-text
              .lp-family-howto-step-child-text-title
                != step.title
              .lp-family-howto-step-child-text-detail
                != step.text        
