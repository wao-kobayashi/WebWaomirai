  class Snowflake {
    constructor(parent, index, total) {
      this.parent = parent;
      this.index = index;
      this.total = total;
      this.element = document.createElement('div');
      this.element.className = 'snowflake';
      this.element.innerHTML = snowSVG;

      this.size = Math.random() * 30 + 20;
      this.element.querySelector('svg').style.width = this.size + 'px';
      this.element.querySelector('svg').style.height = (this.size * 78.31 / 68.09) + 'px';

      this.reset();
      this.parent.appendChild(this.element);
    }

    reset() {
      const rect = this.parent.getBoundingClientRect();
      const sectionWidth = rect.width / this.total;
      const sectionCenter = sectionWidth * (this.index + 0.5);
      const randomOffset = (Math.random() - 0.5) * sectionWidth * 0.4;
      this.x = sectionCenter + randomOffset;
      
      this.y = -100;
      this.speed = Math.random() * 0.7 + 0.4;
      this.baseOpacity = Math.random() * 0.5 + 0.2;
      this.swayOffset = Math.random() * Math.PI * 2;
      this.rotation = Math.random() * 360;
      this.rotationSpeed = (Math.random() - 0.5) * 2;
      this.element.style.left = this.x + 'px';
      this.element.style.top = this.y + 'px';
      this.element.style.opacity = this.baseOpacity;
    }

    update() {
      const rect = this.parent.getBoundingClientRect();
      this.y += this.speed;
      this.rotation += this.rotationSpeed;
      const sway = Math.sin(this.y / 100 + this.swayOffset) * 30;

      const fadeStart = rect.height * 0.6;
      let opacity = this.baseOpacity;
      if (this.y > fadeStart) {
        const fadeRange = rect.height - fadeStart;
        opacity = this.baseOpacity * (1 - (this.y - fadeStart) / fadeRange);
        opacity = Math.max(opacity, 0);
      }

      this.element.style.transform = `translate(${sway}px,0) rotate(${this.rotation}deg)`;
      this.element.style.top = this.y + 'px';
      this.element.style.opacity = opacity;

      if (this.y > rect.height + 100) this.reset();
    }
  }

  // 設定
  const CONFIG = {
    // 対象のdiv ID配列
    targetIds: ['mySnowDiv', 'mySnowDivSecond', 'thirdSnowDiv'],
    // PC用の雪の数
    snowCountPC: 15,
    // スマホ用の雪の数（768px以下）
    snowCountMobile: 8
  };

  // 画面幅を取得して雪の数を決定
  function getSnowCount() {
    return window.innerWidth <= 768 ? CONFIG.snowCountMobile : CONFIG.snowCountPC;
  }

  // 各コンテナごとの雪管理
  const snowContainers = [];

  // 初期化
  function initSnow() {
    CONFIG.targetIds.forEach(id => {
      const container = document.getElementById(id);
      if (!container) return;

      const snowflakes = [];
      const snowCount = getSnowCount();

      for (let i = 0; i < snowCount; i++) {
        const flake = new Snowflake(container, i, snowCount);
        flake.y = Math.random() * container.offsetHeight;
        flake.element.style.top = flake.y + 'px';
        snowflakes.push(flake);
      }

      snowContainers.push({ container, snowflakes });
    });
  }

  // アニメーション
  function animate() {
    snowContainers.forEach(({ snowflakes }) => {
      snowflakes.forEach(flake => flake.update());
    });
    requestAnimationFrame(animate);
  }

  // リサイズ対応
  let resizeTimeout;
  window.addEventListener('resize', () => {
    clearTimeout(resizeTimeout);
    resizeTimeout = setTimeout(() => {
      const newSnowCount = getSnowCount();
      
      snowContainers.forEach(({ container, snowflakes }) => {
        const currentCount = snowflakes.length;
        
        // 雪の数が変わった場合は再初期化
        if (currentCount !== newSnowCount) {
          // 既存の雪をすべて削除
          snowflakes.forEach(flake => flake.element.remove());
          snowflakes.length = 0;
          
          // 新しい数で再生成
          for (let i = 0; i < newSnowCount; i++) {
            const flake = new Snowflake(container, i, newSnowCount);
            flake.y = Math.random() * container.offsetHeight;
            flake.element.style.top = flake.y + 'px';
            snowflakes.push(flake);
          }
        } else {
          // 数が同じ場合は位置調整のみ
          const rect = container.getBoundingClientRect();
          snowflakes.forEach(flake => {
            const sectionWidth = rect.width / newSnowCount;
            const sectionCenter = sectionWidth * (flake.index + 0.5);
            if (flake.x > rect.width || flake.x < 0) {
              flake.x = sectionCenter;
              flake.element.style.left = flake.x + 'px';
            }
          });
        }
      });
    }, 200);
  });

